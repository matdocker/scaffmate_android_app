<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="56sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/menu_list">

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuFourSubOne"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Tower &amp; Mobile Scaffold"/>

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/tower_mobile"
                        android:adjustViewBounds="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:id="@+id/imageView2" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuFourSubTwo"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/birdcage1"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Birdcage Scaffold"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuFourSubThree"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/tubecoupler"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Tube &amp; Coupler Scaffold"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuFourSubFour"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/hung"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Hung Scaffold"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuFourSubFive"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/singlepole"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Single Pole Scaffold"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuFourSubSix"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/suspended"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Suspended (Swing Stage)\nScaffold"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuFourSubSeven"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/scaffold"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Scaffold For Demolition Work"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuFourSubEight"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/specialduty"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Special Duty Scaffold"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuFourSubNine"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/trestle"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Trestle Scaffold"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>