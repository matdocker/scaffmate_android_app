<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#00ffffff"
    android:clickable="true"
    android:paddingTop="56sp"
    tools:context=".MenuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/menu_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuOne"
                card_view:cardCornerRadius="0dp"
                card_view:contentPadding="0dp"
                android:layout_height="220sp"
                android:layout_weight="1.64">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="232dp">

                    <ImageView
                        android:layout_height="213sp"
                    android:layout_width="match_parent"
                    android:src="@drawable/general_scaffolding"
                    android:id="@+id/imageView"
                    android:cropToPadding="false"
                    android:minHeight="181dp"
                    android:translationY="-35dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                    <TextView
                        style="@style/MenuTextStyle"
                        android:id="@+id/textView"
                        android:paddingLeft="0dp"
                        android:text="General Scaffolding"
                        android:layout_marginBottom="21dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuOneOne"
                card_view:cardCornerRadius="0dp"
                card_view:contentPadding="0dp"
                android:layout_height="220sp"
                android:layout_weight="1.64">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="232dp">

                    <ImageView
                        android:layout_height="213sp"
                        android:layout_width="match_parent"
                        android:src="@drawable/supervisors"
                        android:id="@+id/imageView"
                        android:cropToPadding="false"
                        android:minHeight="181dp"
                        android:translationY="-35dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        style="@style/MenuTextStyle"
                        android:id="@+id/textView"
                        android:paddingLeft="0dp"
                        android:text="Supervisors"
                        android:layout_marginBottom="21dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuOneTwo"
                card_view:cardCornerRadius="0dp"
                card_view:contentPadding="0dp"
                android:layout_height="220sp"
                android:layout_weight="1.64">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="232dp">

                    <ImageView
                        android:layout_height="213sp"
                        android:layout_width="match_parent"
                        android:src="@drawable/leading_hands"
                        android:id="@+id/imageView"
                        android:cropToPadding="false"
                        android:minHeight="181dp"
                        android:translationY="-35dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        style="@style/MenuTextStyle"
                        android:id="@+id/textView"
                        android:paddingLeft="0dp"
                        android:text="Leading Hands"
                        android:layout_marginBottom="21dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuOneThree"
                card_view:cardCornerRadius="0dp"
                card_view:contentPadding="0dp"
                android:layout_height="220sp"
                android:layout_weight="1.64">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="232dp">

                    <ImageView
                        android:layout_height="213sp"
                        android:layout_width="match_parent"
                        android:src="@drawable/scaffolders"
                        android:id="@+id/imageView"
                        android:cropToPadding="false"
                        android:minHeight="181dp"
                        android:translationY="-35dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        style="@style/MenuTextStyle"
                        android:id="@+id/textView"
                        android:paddingLeft="0dp"
                        android:text="Scaffolders"
                        android:layout_marginBottom="21dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>