<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="56sp"
    android:background="#00ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/menu_list"
            android:background="#00ffffff">

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuSixSubOne"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/alteration"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Inspecting Scaffolds"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuSixSubTwo"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/inspection_two"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Handover Inspections"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuSixSubThree"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/inspection_one"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Post Handover Inspection"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuSixSubFour"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/scaffold"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Scaffolding"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MenuButton"
                android:onClick="menuSixSubFive"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/Checkmark"
                        android:src="@drawable/checkmark_black"
                        android:layout_alignParentRight="false"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        style="@style/MenuTextStyle"
                        android:text="Inspection Checklist"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>